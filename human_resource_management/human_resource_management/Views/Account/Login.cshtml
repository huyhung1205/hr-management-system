@model human_resource_management.Models.LoginViewModel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-16">
    <div class="max-w-md mx-auto px-4">
        <div class="bg-white rounded-lg material-shadow p-8" data-aos="fade-up">
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="material-icons text-blue-600 text-3xl">lock</span>
                </div>
                <h2 class="text-2xl font-bold text-gray-800">Đăng nhập</h2>
                <p class="text-gray-600 mt-2">Hệ thống quản lý nhân sự</p>
            </div>

            <!-- Form -->
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "space-y-5" }))
            {
                @Html.AntiForgeryToken()

                <!-- Error Messages -->
                if (!ViewData.ModelState.IsValid)
                {
                    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded" data-aos="fade-down">
                        <div class="flex items-start">
                            <span class="material-icons text-red-600 mr-2">error</span>
                            <div class="text-sm">
                                @Html.ValidationSummary(true, "", new { @class = "" })
                            </div>
                        </div>
                    </div>
                }

                <!-- Username -->
                <div>
                    @Html.LabelFor(m => m.TenTK, new { @class = "block text-sm font-medium text-gray-700 mb-2" })
                    <div class="relative">
                        <span class="material-icons absolute left-3 top-3 text-gray-400">person</span>
                        @Html.TextBoxFor(m => m.TenTK, new { @class = "w-full pl-10 pr-4 py-3 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none", placeholder = "Nhập tên tài khoản" })
                    </div>
                    @Html.ValidationMessageFor(m => m.TenTK, "", new { @class = "text-red-500 text-sm mt-1" })
                </div>

                <!-- Password -->
                <div>
                    @Html.LabelFor(m => m.MatKhau, new { @class = "block text-sm font-medium text-gray-700 mb-2" })
                    <div class="relative">
                        <span class="material-icons absolute left-3 top-3 text-gray-400">lock</span>
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "w-full pl-10 pr-4 py-3 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none", placeholder = "Nhập mật khẩu" })
                    </div>
                    @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-red-500 text-sm mt-1" })
                </div>

                <!-- Remember Me -->
                <div class="flex items-center">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-500" })
                    @Html.LabelFor(m => m.RememberMe, new { @class = "ml-2 text-sm text-gray-700" })
                </div>

                <!-- Submit Button -->
                <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded font-medium hover:bg-blue-700 transition-colors material-shadow-sm flex items-center justify-center">
                    <span class="material-icons mr-2">login</span>
                    Đăng nhập
                </button>
            }
        </div>
    </div>
</section>
