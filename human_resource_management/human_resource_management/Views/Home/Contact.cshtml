@{
    ViewBag.Title = "Liên hệ";
}

<!-- Hero Section -->
<section class="bg-blue-600 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center" data-aos="fade-up">
            <h1 class="text-4xl font-bold mb-4">Liên hệ với chúng tôi</h1>
            <p class="text-xl text-blue-100">
                Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn
            </p>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12">
            <!-- Contact Form -->
            <div class="bg-white p-8 rounded-lg material-shadow" data-aos="fade-up">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Gửi tin nhắn</h2>
                <form class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Họ và tên</label>
                        <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" placeholder="Nhập họ và tên">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                        <input type="email" class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" placeholder="example@email.com">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại</label>
                        <input type="tel" class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" placeholder="0123456789">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Nội dung</label>
                        <textarea rows="4" class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" placeholder="Nhập nội dung tin nhắn..."></textarea>
                    </div>
                    <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded font-medium hover:bg-blue-700 transition-colors material-shadow-sm">
                        Gửi tin nhắn
                    </button>
                </form>
            </div>

            <!-- Contact Information -->
            <div data-aos="fade-up" data-aos-delay="100">
                <div class="bg-white p-8 rounded-lg material-shadow mb-6">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Thông tin liên hệ</h2>
                    
                    <div class="space-y-6">
                        <div class="flex items-start">
                            <span class="material-icons text-blue-600 text-2xl mr-4">location_on</span>
                            <div>
                                <h3 class="font-medium text-gray-800 mb-1">Địa chỉ</h3>
                                <p class="text-gray-600">
                                    123 Đường ABC, Quận XYZ<br>
                                    Thành phố Hồ Chí Minh, Việt Nam
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <span class="material-icons text-green-600 text-2xl mr-4">phone</span>
                            <div>
                                <h3 class="font-medium text-gray-800 mb-1">Số điện thoại</h3>
                                <p class="text-gray-600">
                                    Hotline: 1900 1234<br>
                                    Di động: 0123 456 789
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <span class="material-icons text-purple-600 text-2xl mr-4">email</span>
                            <div>
                                <h3 class="font-medium text-gray-800 mb-1">Email</h3>
                                <p class="text-gray-600">
                                    support@hrms.vn<br>
                                    contact@hrms.vn
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <span class="material-icons text-orange-600 text-2xl mr-4">schedule</span>
                            <div>
                                <h3 class="font-medium text-gray-800 mb-1">Giờ làm việc</h3>
                                <p class="text-gray-600">
                                    Thứ 2 - Thứ 6: 8:00 - 17:30<br>
                                    Thứ 7: 8:00 - 12:00
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Social Media -->
                <div class="bg-white p-8 rounded-lg material-shadow">
                    <h3 class="text-xl font-bold text-gray-800 mb-4">Theo dõi chúng tôi</h3>
                    <div class="flex space-x-4">
                        <a href="#" class="w-12 h-12 bg-blue-600 text-white rounded flex items-center justify-center hover:bg-blue-700 transition-colors">
                            <span class="material-icons">facebook</span>
                        </a>
                        <a href="#" class="w-12 h-12 bg-blue-400 text-white rounded flex items-center justify-center hover:bg-blue-500 transition-colors">
                            <span class="material-icons">email</span>
                        </a>
                        <a href="#" class="w-12 h-12 bg-red-600 text-white rounded flex items-center justify-center hover:bg-red-700 transition-colors">
                            <span class="material-icons">play_arrow</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>